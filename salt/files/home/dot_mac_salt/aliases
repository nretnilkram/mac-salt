{% if pillar.get("gg") %}
REPO_DIR="$HOME/dev"
GG_DIR="$REPO_DIR/gg"
CLIENT_DIR="$REPO_DIR/gg_client"
SERVER_DIR="$REPO_DIR/gg_server"
alias gg="cd $GG_DIR"
alias ggc="cd $CLIENT_DIR"
alias ggs="cd $SERVER_DIR"
alias ggup="(cd $GG_DIR/gg-local-infrastructure && vagrant up)"
alias ggdown="(cd $GG_DIR/gg-local-infrastructure && vagrant halt)"

alias build_server="(cd $SERVER_DIR && mvn clean install -Dmaven.test.skip=true --batch-mode)"
alias populate_data="(cd $CLIENT_DIR && npm run buildOrg)"

COMMON_OPTIONS="-classpath 'target/*:target/lib/*' -Dgreenlight.application.properties=conf/application-dev.properties -Dlogback.configurationFile=target/logback.xml"
alias start_repo="(cd $SERVER_DIR/RepoSvc && java $COMMON_OPTIONS -Dderby.stream.error.file=RepositoryRoot/log/derby.log -Dfile.encoding=UTF-8 com.greenlight.camel.CamelMain)"
alias start_history="(cd $SERVER_DIR/ActivityHistory && \cp -vf logback.xml target/ && java $COMMON_OPTIONS com.greenlight.camel.CamelMain)"
alias start_auth="(cd $SERVER_DIR/AuthZ && java $COMMON_OPTIONS com.greenlight.idm.CamelMain)"
alias start_client="(cd $CLIENT_DIR && npm start)"

## For My Proxy Tunnel
alias bats='ssh ci-bastion'
